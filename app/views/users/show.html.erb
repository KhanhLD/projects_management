<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
	<div class="span8">
		<% if @user.groups.any? %>
			<h3>Projects (<%= @user.groups.count %>)</h3>
			<ol class="groups">
				<%= render @groups %>
			</ol>
			<%= will_paginate @groups %>
		<% end %>
	</div>	
</div>
