<% provide(:title, 'New project') %>
<h1>New project</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@project) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :start, "Start date" %>
      <%= f.text_field :start %>

      <%= f.label :end, "End date" %>
      <%= f.text_field :end %>

      <%= f.submit "Create new project", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
